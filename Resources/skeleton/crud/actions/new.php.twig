
    /**
     * Displays a form to create a new {{ entity }} entity.
     *
{% if 'annotation' == format %}
     * @Route("/new", name="{{ route_name_prefix }}_new")
     * @Method("GET")
{% endif %}
     */
    public function newAction()
    {
        ${{ entity|lower }} = new {{ entity_class }}();
        $form = $this->createForm({{ entity_class }}Type::class, ${{ entity|lower }});

        return $this->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}:new.html.twig', [
            '{{ entity|lower }}' => ${{ entity|lower }},
            'form' => $form->createView(),
        ]);
    }
